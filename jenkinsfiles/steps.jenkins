#!groovy

properties([disableConcurrentBuilds()])

pipeline{
    agent{
        label 'master'
        }
    stages{
        stage("docker-compose up"){
            steps {
                bat 'docker-compose up'
            }
        }
        stage("Test product page"){
            steps {
                bat 'pytest test_main_page.py'
            }
        }
        stage("docker-compose stop"){
            steps {
                bat 'docker-compose stop'
            }
        }
    }
}